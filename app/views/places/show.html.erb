<div class="container-fluid">
  <h1><%= @place["name"] %></h1>

  <p>
   <button class="btn btn-secondary" onclick="window.location.href='/posts/new?place_id=<%= @place["id"] %>'">New Post</button>
  </p>

  <% if @current_user %>
    
    <div class="row">
      <% @posts.each_slice(3) do |post_group| %>
        <% post_group.each do |post| %>
          <div class="col-lg-4 col-md-6 col-sm-12">
            <h3><%= post["title"] %></h3>
            <p class="post-date"><%= post["posted_on"] %></p>
            <p><%= post["description"] %></p>
        </div>
        <% end %>
      <% end %>
    </div>
  <% end %>


</div>