<div class="container-fluid">
  <h1><%= @place["name"] %></h1>

  <p>
   <a class="btn btn-secondary" href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
  </p>

  <% if @current_user %>
    
    <div class="row">
 <% for post in @posts %>
          <div class="col-lg-4 col-md-6 col-sm-12">
            <h3><%= post["title"] %></h3>
            <p class="post-date"><%= post["posted_on"] %></p>
            <p><%= post["description"] %></p>
            
            <% if post.uploaded_image.attached? %>
           <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
          <% else %>
          <img src="<%= post["image"] %>" class="img-fluid">
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>


</div>