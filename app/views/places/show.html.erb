<div class="container-fluid">
<h1><%= @place["name"] %></h1>

<% if @current_user %>
  <h2>My Posts</h2>
  <% for post in @posts %>
    <h3><%= post["title"] %></h3>
    <h4><%= post["posted_on"] %></h4>
    <p><%= post["description"] %></p>
    <%= button_to "Delete", post, :method => "delete", :class => "btn btn-dark" %>
  <% end %>
<% end %>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>
</div>